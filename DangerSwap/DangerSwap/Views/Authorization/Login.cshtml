@model User
@{
}
<main>
    <div class="header-img"></div>
</main>
<div class="container mt-5">
    <div class="row justify-content-center align-items-center m-auto">
        <form asp-controller="Authorization" asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger">
            </div>
            <div class="col-4 mx-auto">
            <div class="mb-3" >
                <label class="form-label row justify-content-center align-items-center fw-bold" asp-for="Email">Username or email</label>
                <input type="text" asp-for="Email" class="form-control" placeholder="Enter username or email adress" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label row justify-content-center align-items-center fw-bold" asp-for="Password">Password</label>
                <input type="password" asp-for="Password" class="form-control" placeholder="Enter password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
           <div class="text-center d-flex" style="height: 10vh">
            <div class="container m-auto">
             <div class="row">
              </div>
            </div>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary float-start btn-block w-25">Login</button>
                <input type="button" class="btn btn-primary float-end btn-block  w-25" value="Register" onclick="window.location= '@Url.Action( "Registration", "Authorization")'" />
            </div>
            </div>
        </form>
    </div>
</div>
