@model User
@using DangerSwap.Infrastructure
@using DangerSwap.Utilities

<div class="container mt-5">
    <div class="row justify-content-center align-items-center m-auto">
        <h1 class="row mb-3 justify-content-center align-items-center m-auto fw-bold">Registration</h1>
        <form asp-controller="Authorization" asp-action="Register" method="post">
            <div class="col-4 mx-auto">
                <div class="mb-3 pt-4">
                    <input type="text" asp-for="UserName" class="form-control" placeholder="Username" maxlength="@StringLengthConst.DefaultString" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="mb-3 pt-4">
                    <input type="text" asp-for="Email" class="form-control" placeholder="Email adress" maxlength="@StringLengthConst.Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3 pt-4 ">
                    <div class="input-group">
                        <input type="password" asp-for="Password" id="password" class="form-control password block w-full" placeholder="Password" maxlength="@StringLengthConst.Password" />
                        <span class="input-group-text"><i class="far fa-eye" id="toggle-password"></i></span>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3 pt-4">
                    <select asp-for="Citizenship" class="form-select">
                        <option value="">Choose your Citizenship</option>
                        @foreach (string nationality in NationalitySelector.GetCountryNames())
                        {
                                <option value=@nationality>@nationality</option>
                        }
                    </select>
                    <span asp-validation-for="Citizenship" class="text-danger"></span>
                </div>
                <div class="mb-3 pt-4">
                    <select asp-for="Nationality" class="form-select">
                        <option value="">Choose your Nationality</option>
                        @foreach (string nationality in NationalitySelector.GetCountryNames())
                        {
                                <option value=@nationality>@nationality</option>
                        }
                    </select>
                    <span asp-validation-for="Nationality" class="text-danger"></span>
                </div>
                <div class="mb-3 pt-4 ">
                    <input type="Date" asp-for="BirthDate" class="form-control" value="" min="1900-01-01" max="2006-01-01" />
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                </div>
                <div class="text-center d-flex recaptcha">
                    <div class="container m-auto">
                        <div class="row">
                        </div>
                    </div>
                </div>
                <div class="mb-3 pt-4 row justify-content-center align-items-center">
                    <button type="submit" class="btn btn-primary w-25">Register</button>
                </div>
            </div>
        </form>
    </div>
</div>
