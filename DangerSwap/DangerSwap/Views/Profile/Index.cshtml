@model User
@using DangerSwap.Infrastructure
@using DangerSwap.Utilities

<div class="container mt-5">
    <div class="row justify-content-center align-items-center m-auto">
        <h1 class="row mb-3 justify-content-center align-items-center m-auto fw-bold">Edit Profile</h1>
        <form asp-controller="Authorization" asp-action="Register" method="post">  <!--controller -Profile action "Update" -->
            <!--Kai bus action update pakeisti-->
            <div class="col-4 mx-auto">
                <div class="mb-3 pt-4">
                    <!--newEmailAdress, Siulau tempEmail-->
                    <input type="text" asp-for="Email" class="form-control" placeholder="New email adress" maxlength="@StringLengthConst.email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <!--Controleryje turės būti repeat new email address kintamasis, kuris pirmam lauke irasomas, ir lyginamas su zemiau esanciu lauku-->

                <!--repeatedEmailAddress  if(tempEmail==Email)->User.Email=Email -->
                <div class="mb-3 pt-4">
                    <input type="text" asp-for="Email" class="form-control" placeholder="Reapeat new email adress" maxlength="@StringLengthConst.email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!--Tikrinama ar sutampa su senu password      tempPassword -> if(password==tempPassword) continue -->
                 <div class="mb-3 pt-4 ">
                    <div class="input-group">
                        <input type="password" asp-for="Password" id="password" class="form-control password block w-full" placeholder="Enter old password" maxlength="@StringLengthConst.password" />
                        <span class="input-group-text"><i class="far fa-eye" id="toggle-password"></i></span>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!--Naujas password, saugom i laikina kintamaji tempNewPassword -->
                        <div class="mb-3 pt-4 ">
                    <div class="input-group">
                        <input type="password" asp-for="Password" id="password" class="form-control password block w-full" placeholder="Enter new password" maxlength="@StringLengthConst.password" />
                        <span class="input-group-text"><i class="far fa-eye" id="toggle-password"></i></span>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!--Tikrinam ar sutampa su katik ivestu nauju newPassword if(tempNewPassword == newPassword) User.Password= newPassword -->
                        <div class="mb-3 pt-4 ">
                    <div class="input-group">
                        <input type="password" asp-for="Password" id="password" class="form-control password block w-full" placeholder="Repeat new password" maxlength="@StringLengthConst.password" />
                        <span class="input-group-text"><i class="far fa-eye" id="toggle-password"></i></span>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="text-center d-flex recaptcha">
                    <div class="container m-auto">
                        <div class="row">
                        </div>
                    </div>
                </div>
                <div class="mb-3 pt-4 row justify-content-center align-items-center">
                    <button type="submit" class="btn btn-primary w-25">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>
