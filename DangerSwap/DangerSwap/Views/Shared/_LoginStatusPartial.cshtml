@if (User.Identity.IsAuthenticated)
{
    <div class="dropdown">
        <label class="pt-2">@User.Identity.Name </label>
        <button class="ms-3 btn profileButton float-end dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fa fa-user"></i>
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="/Profile/Index">Profile Page</a>
            <form method="post" class="form-inline" asp-controller="Authorization" asp-action="Logout">
                <button type="submit" class="dropdown-item btn btn-link">Logout</button>
            </form>
        </div>
    </div>
}
else
{
    <a class="btn btn-link" asp-controller="Authorization" asp-action="Login">Login</a>
}